import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Menu extends JFrame implements ActionListener{

    JButton level1Button, level2Button, exit;
    private JPanel cards;
    private CardLayout cardLayout;
    private Gra gra;

    private int level;
    public Menu(CardLayout cardLayout) {
        setUndecorated(true); // UsuniÄ™cie klasycznego okna
        this.cardLayout = cardLayout;
        setSize(1024, 768);

        setLayout(new BorderLayout());
        this.cardLayout = new CardLayout();
        cards = new JPanel(this.cardLayout);

        JPanel menuPanel = createMenuPanel();
        cards.add(menuPanel, "Menu");

        add(cards);

        this.cardLayout.show(cards, "Menu");

        setLocationRelativeTo(null);
        setVisible(true);
    }
    private JPanel createMenuPanel ()
    {
        JPanel menuPanel = new JPanel();
        menuPanel.setLayout(null);

        level1Button = new JButton("Poziom 1");
        level1Button.setBounds(400, 100, 200, 50);
        level2Button = new JButton("Poziom 2");
        level2Button.setBounds(400, 200, 200, 50);
        exit = new JButton("Wyjdz z gry");
        exit.setBounds(400, 500, 200, 200);

        menuPanel.add(level1Button);
        menuPanel.add(level2Button);
        menuPanel.add(exit);

        level1Button.addActionListener(this);
        level2Button.addActionListener(this);
        exit.addActionListener(this);

        return menuPanel;
    }


    public void actionPerformed (ActionEvent e)
    {
        Object source = e.getSource();
        if (source == level1Button) {
            startGame(1);
        }
        else if (source == level2Button)
        {
            startGame(2);
        }
        else if (source == exit)
        {
            System.exit(0);
        }
    }
    private void startGame(int level)
    {
        Gra gra = new Gra(cardLayout, level);
        cards.add(gra, "Gra");
        this.cardLayout.show(cards, "Gra");
    }
}





